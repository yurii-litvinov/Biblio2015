@model string
@{
    ViewBag.Title = "SearchOnScholar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "getDataList"
    };
}

<br>
<br>
<br>

@using (Ajax.BeginForm("SearchOnScholarResult", ajaxOptions))
{
    <div class="row">
        <div class="col-md-3">
            <div class="input-group">
                <input type="text" id="Query" name="Query" class="form-control" placeholder="Поиск на Google.Scholar">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
    <h6></h6>
    <div class="row">
        <div class="col-md-8">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                        <span class="glyphicon glyphicon-cog"></span>
                        <label> Точный поиск</label>
                    </a>
                </div>
                <h6></h6>
                <div id="collapseTwo" class="accordion-body collapse">
                    <div class="accordion-inner">
                        <div class="item">
                            Количество статей: 
                            <input type="number" id="Number" name="Number" class="form-control" placeholder="Количество статей">
                        </div>
                        <h6></h6>
                        <div class="item">
                            Статьи, в которых встречается точное словосочетание: 
                            <input type="text" id="ExactPhrase" name="ExactPhrase" class="form-control" placeholder="Словосочетание">
                        </div>
                        <h6></h6>
                        <div class="item">
                            Статьи, в к которых нет слов: 
                            <input type="text" id="AllWords" name="Without" class="form-control" placeholder="Нет слов">
                        </div>
                        <h6></h6>
                        <div class="item">
                            Опубликованы в: 
                            <input type="text" id="Published" name="Published" class="form-control" placeholder="Место публикации">
                        </div>
                        <h6></h6>
                        <div class="item">
                            Авторы: 
                            <input type="text" id="Author" name="Author" class="form-control" placeholder="Авторы">
                        </div>
                        <h6></h6>
                        <div class="item">
                            Опубликованы в период: 
                            <input type="number" id="DateStart" name="DateStart" class="form-control" placeholder="Начало" style="width: 100px">
                            <input type="number" id="DateEnd" name="DateEnd" class="form-control" placeholder="Конец" style="width: 100px">
                        </div>
                        <h6></h6>
                        <label>Искать сопадения</label>
                        <div class="item">
                            <input checked="checked" id="Head" name="Head" type="radio" value="false" /> Везде в статье
                        </div>
                        <div class="item">
                            <input id="Head" name="Head" type="radio" value="true" /> Только в заголовке
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

        <form id="getDataList"></form>
