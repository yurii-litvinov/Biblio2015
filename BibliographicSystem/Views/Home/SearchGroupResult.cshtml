@using BibliographicSystem.Models
@model List<Group>

@{
    ViewBag.Title = "SearchGroupResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h4>Здесь нет того, что вы ищите?</h4>
            <a href="/Home/MainPage"><p>Попробуйте снова</p></a>
        </div>
    </div>
    @if (Model.Count > 0)
    {
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Тематика</th>
                            <th>Подробнее</th>
                        </tr>
                    </thead>
                    @foreach (Group b in Model)
                    {
                        <tbody>
                            <tr>
                                <td><p>@b.GroupName</p></td>
                                <td><p>@b.Theme</p></td>
                                <td><a href="/Home/GroupPage/@b.GroupId">Подробнее..</a></td>
                                <!--<td><p><a href="/Home/Buy/b.Id">Купить</a></p></td-->
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    }
</div>

