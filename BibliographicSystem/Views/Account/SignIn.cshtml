@model BibliographicSystem.Models.RegisterModel

@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form  class="form-horizontal" method="post">
                @Html.ValidationSummary(true)
                <h2 class="form-signin-heading">Пожалуйста, зарегистрируйтесь</h2>
                <label for="Username" class="sr-only">Username</label>
                <input type="text" name="Username" id="Username" class="form-control" placeholder="Username" required autofocus>
                @Html.ValidationMessageFor(model => model.Username)
                <h6></h6>
                <label for="Email" class="sr-only">Email</label>
                <input type="text" name="Email" id="Email" class="form-control" placeholder="Email" required autofocus>
                @Html.ValidationMessageFor(model => model.Email)
                <h6></h6>
                <label for="Password" class="sr-only">Password</label>
                <input type="password" name="Password" id="Password" class="form-control" placeholder="Password" required>
                @Html.ValidationMessageFor(model => model.Password)
                <h6></h6>
                <label for="ConfirmPassword" class="sr-only">ConfirmPassword</label>
                <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" required autofocus>
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                <h6></h6>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Зарегистрироваться</button>
            </form>
        </div> <!-- col -->
   </div>  <!--row--> 

</div> <!--container -->

